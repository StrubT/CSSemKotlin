<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

	<persistence-unit name="AddressBook">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>ch.bfh.cssem.kotlin.jpa.java.Person</class>
		<class>ch.bfh.cssem.kotlin.jpa.java.City</class>
		<class>ch.bfh.cssem.kotlin.jpa.java.State</class>
		<class>ch.bfh.cssem.kotlin.jpa.java.Country</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/addressbook" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="addressbook" />
			<property name="javax.persistence.jdbc.password" value="addressbook" />
		</properties>
	</persistence-unit>
</persistence>
